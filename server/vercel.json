{
  "version": 2,
  "rewrites": [
    { "source": "/minimal/(.*)", "destination": "/minimal-server.js" },
    { "source": "/api/(.*)", "destination": "/server.js" },
    { "source": "/(.*)", "destination": "/server.js" }
  ],
  "functions": {
    "server.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "minimal-server.js": {
      "memory": 512,
      "maxDuration": 5
    }
  },
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "true"
  }
}
