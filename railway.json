{
    "services": {
      "client": {
        "build": {
          "builder": "nixpacks",
          "buildCommand": "npm install",
          "startCommand": "npm run dev"
        },
        "env": ".env.client"
      },
      "CRM": {
        "build": {
          "builder": "nixpacks",
          "buildCommand": "npm install",
          "startCommand": "npm start"
        },
        "env": ".env.crm"
      },
      "server": {
        "build": {
          "builder": "nixpacks",
          "buildCommand": "npm install",
          "startCommand": "npm run dev"
        },
        "env": ".env.server"
      }
    }
  }
  